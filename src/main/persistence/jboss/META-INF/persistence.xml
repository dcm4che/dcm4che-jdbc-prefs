<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
  xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="dcm4che-jdbc-prefs">
    <jta-data-source>${ds}</jta-data-source>
    <properties>
      <property name="hibernate.dialect" value="${hibernate.dialect}" />
      <property name="hibernate.hbm2ddl.auto" value="${hbm2ddl.auto}" />
      <property name="hibernate.show_sql" value="${show_sql}" />
      <property name="hibernate.jdbc.use_get_generated_keys" value="true" />
      <property name="hibernate.jdbc.fetch_size" value="20"/>
      <property name="jboss.entity.manager.factory.jndi.name" value="java:jboss/myEntityManagerFactory" />
    </properties>
  </persistence-unit>
</persistence>
