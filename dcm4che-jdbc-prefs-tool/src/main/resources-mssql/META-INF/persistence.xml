<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
  xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="dcm4che-jdbc-prefs">
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect" />
      <property name="hibernate.hbm2ddl.auto" value="${hbm2ddl.auto}" />
      <property name="hibernate.show_sql" value="${show_sql}" />
      <property name="hibernate.jdbc.use_get_generated_keys" value="true" />
      <property name="hibernate.jdbc.fetch_size" value="50"/>
      <property name="hibernate.connection.driver_class" value="com.microsoft.jdbc.sqlserver.SQLServerDriver" />
    </properties>
  </persistence-unit>
</persistence>
